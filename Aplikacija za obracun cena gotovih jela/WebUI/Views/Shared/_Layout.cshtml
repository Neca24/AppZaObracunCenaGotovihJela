<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - RestaurantApp</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

    <style>
        body {
            background: #f5f5f5;
        }

        .navbar-custom {
            background: #1a1a1a !important;
        }

            .navbar-custom .nav-link,
            .navbar-custom .navbar-brand {
                color: #fff !important;
            }

                .navbar-custom .nav-link:hover {
                    color: #0dcaf0 !important;
                }

        .card-custom {
            border-radius: 12px;
            box-shadow: 0 4px 18px rgba(0,0,0,0.12);
        }

        footer {
            margin-top: 40px;
            background: #1a1a1a;
            color: #aaa;
            padding: 15px;
            text-align: center;
        }

        .btn-modern {
            border-radius: 10px;
            padding: 8px 18px;
        }
    </style>
</head>
<body class="d-flex flex-column min-vh-100">

    <nav class="navbar navbar-expand-lg navbar-dark navbar-custom shadow-sm">
        <div class="container">
            <a class="navbar-brand fw-bold" asp-action="Index" asp-controller="Home">
                🍽 Restaurant Costing
            </a>

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                    data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">

                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Artikal" asp-action="Index">Artikli</a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Jelo" asp-action="Index">Jela</a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Home" asp-action="About">O aplikaciji</a>
                    </li>

                </ul>
            </div>
        </div>
    </nav>

    <div class="container mt-4">
        @RenderBody()
    </div>

    <footer class="mt-auto">
        Restaurant Costing App © @DateTime.Now.Year – Projekat za potrebe prakse
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
