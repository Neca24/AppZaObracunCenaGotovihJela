@using Application.DTOs.ArtikalDTOs
@model ArtikalDTO

@{
    ViewData["Title"] = "Izmena artikla";
}

<div class="container">

    <h2 class="fw-bold mb-4 text-center">
        <img src="~/ikonice/artikalCreateEdit.png" class="me-2" style="width:50px; height:50px;" />
        Izmena artikla
    </h2>

    <div class="card shadow-sm p-4 col-lg-6 col-md-8 mx-auto">

        <form method="post" asp-antiforgery="true">

            <div asp-validation-summary="ModelOnly" class="alert alert-danger" style="display:none;"></div>

            <div class="mb-3">
                <label class="form-label fw-semibold">Naziv artikla</label>
                <input asp-for="Naziv" class="form-control" readonly />
            </div>

            <div class="row mb-3">
                <div class="col-md-6">
                    <label asp-for="JedinicaMere" class="form-label fw-semibold"></label>
                    <input asp-for="JedinicaMere" class="form-control" readonly/>
                </div>

                <div class="col-md-6">
                    <label asp-for="Cena" class="form-label fw-semibold"></label>
                    <input asp-for="Cena" class="form-control" step="0.01" />
                    <span asp-validation-for="Cena" class="text-danger"></span>
                </div>
            </div>

            <button class="btn btn-primary w-100 mt-3">Sačuvaj izmene</button>

        </form>

    </div>
</div>