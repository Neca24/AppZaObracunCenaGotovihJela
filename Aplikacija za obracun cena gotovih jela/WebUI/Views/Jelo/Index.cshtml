@using Application.DTOs.JeloDTOs
@model List<JeloDTO>

@{
    ViewData["Title"] = "Jela";
}
<div class="container">

    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="fw-bold">
            <img src="~/ikonice/jelo.png" class="me-2" style="width:50px; height:50px;" />
            Lista jela
        </h2>
        <a class="btn btn-success btn-modern" asp-action="Create">+ Dodaj novo jelo</a>
    </div>

    <div class="card shadow-sm p-4">
        <div class="table-responsive">
            <table class="table table-hover align-middle">
                <thead class="table-dark">
                    <tr>
                        <th>Naziv</th>
                        <th>JM</th>
                        <th>Količina</th>
                        <th>Cena po porciji</th>
                        <th>Akcije</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var j in Model)
                    {
                        <tr>
                            <td>@j.Naziv</td>
                            <td>@j.JedinicaMere</td>
                            <td>@j.Kolicina</td>
                            <td>@j.CenaPoPorciji.ToString("N2")</td>
                            <td>
                                <a asp-action="Details" asp-route-id="@j.Id" class="btn btn-primary btn-sm">Detalji</a>
                                <a asp-action="EditReceptura" asp-route-id="@j.Id" class="btn btn-warning btn-sm">Receptura</a>

                                <form asp-action="Delete" asp-route-id="@j.Id" method="post"
                                      style="display:inline;">
                                    <button class="btn btn-danger btn-sm">Obriši</button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
