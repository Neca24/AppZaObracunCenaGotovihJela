@using Application.DTOs.JeloDTOs
@model JeloDTO

<h2 class="fw-bold mb-4">Novo jelo</h2>

<div class="card shadow-sm p-4 col-lg-6 col-md-8 mx-auto">

    <form method="post" asp-antiforgery="true">

        <div asp-validation-summary="ModelOnly" class="alert alert-danger mb-3" role="alert" style="display:none;"></div>

        <div class="mb-3">
            <label asp-for="Naziv" class="form-label fw-semibold"></label>
            <input asp-for="Naziv" class="form-control" />
            <span asp-validation-for="Naziv" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Opis" class="form-label fw-semibold"></label>
            <textarea asp-for="Opis" class="form-control" rows="2"></textarea>
            <span asp-validation-for="Opis" class="text-danger"></span>
        </div>

        <div class="row mb-3">
            <div class="col-6">
                <label asp-for="JedinicaMere" class="form-label fw-semibold"></label>
                <select asp-for="JedinicaMere"
                        asp-items="Html.GetEnumSelectList<Domain.Entities.Enums.JMereJeloEnum>()"
                        class="form-select"></select>
                <span asp-validation-for="JedinicaMere" class="text-danger"></span>
            </div>

            <div class="col-6">
                <label asp-for="Kolicina" class="form-label fw-semibold"></label>
                <input asp-for="Kolicina" class="form-control" />
                <span asp-validation-for="Kolicina" class="text-danger"></span>
            </div>
        </div>

        <button class="btn btn-primary w-100 mt-3">Sačuvaj</button>

    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}