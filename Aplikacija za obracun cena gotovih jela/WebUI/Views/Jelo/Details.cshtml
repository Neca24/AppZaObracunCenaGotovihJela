@using Application.DTOs.JeloDTOs
@model JeloDTO

@{
    ViewData["Title"] = "Detalji";
}

<div class="container">
    <div class="card card-custom p-4">

        <h2 class="fw-bold">@Model.Naziv</h2>
        <p class="text-muted">@Model.Opis</p>

        <h4 class="mt-3">Ukupna cena za @Model.Kolicina @Model.JedinicaMere iznosi: <b>@(ViewBag.UkupnaCena.ToString("N2")) RSD</b></h4>

        <hr />

        <h4>Sastojci:</h4>

        <table class="table table-hover">
            <thead class="table-dark">
                <tr>
                    <th>Artikal</th>
                    <th>JM</th>
                    <th>Količina</th>
                    <th>Ukupno</th>
                </tr>
            </thead>

            <tbody>
                @foreach (var s in Model.Sastojci)
                {
                    <tr>
                        <td>@s.NazivArtikla</td>
                        <td>@s.JedinicaMere</td>
                        <td>@s.Kolicina</td>
                        <td><b>@s.CenaUkupno.ToString("N2")</b></td>
                    </tr>
                }
            </tbody>
        </table>

        <a class="btn btn-warning btn-modern mt-3" asp-action="EditReceptura" asp-route-id="@Model.Id">Izmeni recepturu</a>

    </div>
</div>
